string(APPEND CMAKE_C_FLAGS " -fp-model precise -std=gnu99")
if (compile_threaded)
  string(APPEND CMAKE_C_FLAGS   " -qopenmp")
  string(APPEND CMAKE_CXX_FLAGS " -qopenmp")
  string(APPEND CMAKE_Fortran_FLAGS   " -qopenmp")
  string(APPEND CMAKE_EXE_LINKER_FLAGS  " -qopenmp")
endif()
# Add compiler and linker flags to handle large relocations for debug builds
string(APPEND CMAKE_C_FLAGS " -mcmodel=large -fPIC -fno-common")
string(APPEND CMAKE_CXX_FLAGS " -mcmodel=large -fPIC -fno-common")
string(APPEND CMAKE_Fortran_FLAGS " -mcmodel=large -fPIC -fno-common")

# Advanced linker optimizations for large executables with stubborn relocation issues
string(APPEND CMAKE_EXE_LINKER_FLAGS " -mcmodel=large")
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,-z,max-page-size=0x200000")
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,--no-relax")
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,--hash-style=gnu") 
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,-z,noexecstack")
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,--reduce-memory-overheads")
string(APPEND CMAKE_EXE_LINKER_FLAGS " -Wl,-z,combreloc")

# Release-specific optimizations
string(APPEND CMAKE_EXE_LINKER_FLAGS_RELEASE " -Wl,--gc-sections")
string(APPEND CMAKE_EXE_LINKER_FLAGS_RELEASE " -Wl,--as-needed") 
string(APPEND CMAKE_EXE_LINKER_FLAGS_RELEASE " -Wl,-O2")
string(APPEND CMAKE_EXE_LINKER_FLAGS_RELEASE " -Wl,--discard-locals")
string(APPEND CMAKE_SHARED_LINKER_FLAGS_RELEASE " -Wl,--gc-sections -Wl,--as-needed -Wl,-O2")
string(APPEND CMAKE_CXX_FLAGS_RELEASE " -O2")
string(APPEND CMAKE_Fortran_FLAGS_RELEASE   " -O2 -debug minimal")
string(APPEND CMAKE_C_FLAGS_DEBUG   " -O1 -g -debug minimal")
string(APPEND CMAKE_CXX_FLAGS_DEBUG " -O1 -g -debug minimal")
string(APPEND CMAKE_Fortran_FLAGS_DEBUG   " -O1 -g -debug minimal -check uninit -fpe0")
string(APPEND CMAKE_CXX_FLAGS " -fp-model source")
string(APPEND CPPDEFS " -DFORTRANUNDERSCORE -DNO_R16 -DCPRINTEL")

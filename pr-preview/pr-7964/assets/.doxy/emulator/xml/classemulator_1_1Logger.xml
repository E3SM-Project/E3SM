<codeline><highlight class="normal">logger.set_file(</highlight><highlight class="stringliteral">&quot;component.log&quot;</highlight><highlight class="normal">);</highlight></codeline>
<codeline><highlight class="normal">logger.info(</highlight><highlight class="stringliteral">&quot;Component<sp/>initialized&quot;</highlight><highlight class="normal">);</highlight></codeline>
<codeline><highlight class="normal">logger.warn(</highlight><highlight class="stringliteral">&quot;Configuration<sp/>missing,<sp/>using<sp/>defaults&quot;</highlight><highlight class="normal">);</highlight></codeline>
</programlisting> </para>

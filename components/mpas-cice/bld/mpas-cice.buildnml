	print $stream_file "    <var name=" . '"iceThicknessCategoryMin"/>' . "\n";
	print $stream_file "    <var name=" . '"iceThicknessCategoryMax"/>' . "\n";
	print $stream_file "    <var name=" . '"snowThicknessCategoryMin"/>' . "\n";
	print $stream_file "    <var name=" . '"snowThicknessCategoryMax"/>' . "\n";
	print $stream_file "    <var name=" . '"snowThicknessCategoryLocMax"/>' . "\n";
	print $stream_file "    <var name=" . '"globalIceArea"/>' . "\n";
	print $stream_file "    <var name=" . '"globalIceExtent"/>' . "\n";
        print $stream_file "    <var name=" . '"globalIceVolume"/>' . "\n";
        print $stream_file "    <var name=" . '"globalIceThickness"/>' . "\n";
        print $stream_file "    <var name=" . '"globalSnowVolume"/>' . "\n";
        print $stream_file "    <var name=" . '"globalSnowThickness"/>' . "\n";

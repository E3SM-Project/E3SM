	print $stream_file "    <var name=" . '"iceVolumeCell"/>' . "\n";
	print $stream_file "    <var name=" . '"snowVolumeCell"/>' . "\n";
	print $stream_file "    <var name=" . '"surfaceTemperature"/>' . "\n";
	print $stream_file "    <var name=" . '"iceAreaCategoryPlot"/>' . "\n";
	print $stream_file "    <var name=" . '"iceVolumeCategoryPlot"/>' . "\n";
	print $stream_file "    <var name=" . '"snowVolumeCategoryPlot"/>' . "\n";
	print $stream_file "    <var name=" . '"surfaceTemperaturePlot"/>' . "\n";
	print $stream_file "    <var name=" . '"iceThickness"/>' . "\n";
	print $stream_file "    <var name=" . '"snowThickness"/>' . "\n";
	print $stream_file "    <var name=" . '"iceAreaVertex"/>' . "\n";
	print $stream_file "    <var name=" . '"totalMassCell"/>' . "\n";
	print $stream_file "    <var name=" . '"totalMassVertex"/>' . "\n";

SET (HDF5_DIR $ENV{HDF5} CACHE FILEPATH "")
SET (HOMME_FIND_BLASLAPACK TRUE CACHE BOOL "")
SET (ENABLE_OPENMP FALSE CACHE BOOL "")
SET (SUNDIALS_DIR $ENV{SUNDIALS} CACHE FILEPATH "")

SET (HOMME_PROJID "climalg" CACHE STRING "")

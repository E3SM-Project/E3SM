<mam_mom_mixing_state>3</mam_mom_mixing_state>
<mam_mom_cycle_yr  >1                                                                                    </mam_mom_cycle_yr  >
<mam_mom_datapath  >'atm/cam/chem/trop_mam/marine_BGC/'                                                  </mam_mom_datapath  >

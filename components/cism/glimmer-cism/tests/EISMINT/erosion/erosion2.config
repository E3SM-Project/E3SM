# configuration for the EISMINT-2 test-case

[EISMINT-2]

[grid]
# grid sizes
ewn = 76
nsn = 76
upn = 11
dew = 20000
dns = 20000

[options]
dycore = 0
topo_is_relaxed = 1
temperature = 1
flow_law = 2
isostasy = 0
marine_margin = 3
evolution = 0
basal_water = 1
slip_coeff = 2
#sliding_law = 0
vertical_integration = 1

[time]
tend = 50000.
dt = 5.
ntem = 1.
nvel = 1.
niso = 1.

[parameters]
flow_factor = 1.
geothermal = -42.e-3
basal_tract_const = 1.e-3

[Erosion]

[isostasy]

[CF default]
title: erosion, llfa
comment: simple erosion, with llfa

[CF output]
name: erosion2.nc
frequency: 1000
variables: thk bmlt temp uvel vvel bwat topg erate erosion slc relx

[CF input]
name: topo.nc
time: 1


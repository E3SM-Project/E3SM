@article{Zhang_Bretherton08,
author = { Minghua  Zhang  and  Christopher  Bretherton },
title = {Mechanisms of Low Cloud Climate Feedback in Idealized Single-Column Simulations with the Community Atmospheric Model, Version 3 ({CAM3})},
journal = {Journal of Climate},
volume = {21},
number = {18},
pages = {4859-4878},
year = {2008},

author = { K. E.  Taylor  and  M.  Crucifix  and  P.  Braconnot  and  C. D.  Hewitt  and  C.  Doutriaux  and  A. J.  Broccoli  and  J. F. B.  Mitchell  and  M. J.  Webb },
title = {Estimating Shortwave Radiative Forcing and Response in Climate Models},

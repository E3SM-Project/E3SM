@article{Bogenschutz_Krueger13,
author = {Bogenschutz, Peter A. and Krueger, Steven K.},
title = {A simplified PDF parameterization of subgrid-scale clouds and turbulence for cloud-resolving models},
journal = {Journal of Advances in Modeling Earth Systems},

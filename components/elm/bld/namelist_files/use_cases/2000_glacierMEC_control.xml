<?xml version="1.0"?>

<!-- Support for running with glacier model -->

<namelist_defaults>

<use_case_desc>Running an IG case for 2000 conditions with the ice sheet model</use_case_desc>

<sim_year>2000</sim_year>

<sim_year_range>constant</sim_year_range>



<stream_year_first_ndep phys="elm" use_cn=".true." ndepsrc="stream" >2000</stream_year_first_ndep>
<stream_year_last_ndep  phys="elm" use_cn=".true." ndepsrc="stream" >2000</stream_year_last_ndep>


<stream_year_first_pdep phys="elm" use_cn=".true." ndepsrc="stream" >2000</stream_year_first_pdep>
<stream_year_last_pdep  phys="elm" use_cn=".true." ndepsrc="stream" >2000</stream_year_last_pdep>

<stream_year_first_popdens phys="elm" use_cn=".true." ndepsrc="stream" >1850</stream_year_first_popdens>
<stream_year_last_popdens  phys="elm" use_cn=".true." ndepsrc="stream" >1850</stream_year_last_popdens>


<glc_nec>10</glc_nec>

<!-- glc_smb will already be set if glc_nec is set, but set explicitly here -->
<glc_smb    >.true.</glc_smb>

<hist_fincl2>QICE</hist_fincl2>
<hist_mfilt >1,1</hist_mfilt>
<hist_nhtfrq>0,-8760</hist_nhtfrq>

</namelist_defaults>

    </mach>
    <mach name="chrysalis">
      <pes compset="any" pesize="any">
        <comment>mali+chrysalis: default, 4 nodes x 32 mpi x 2 omp @ root 0</comment>
        <MAX_MPITASKS_PER_NODE>32</MAX_MPITASKS_PER_NODE>
        <MAX_TASKS_PER_NODE>64</MAX_TASKS_PER_NODE>

    nmlgen.add_default('do_histinit')
    nmlgen.add_default('shr_map_dopole')
    nmlgen.add_default('cpl_cdf64')
    nmlgen.add_default('aoflux_grid')

    nmlgen.add_default('orb_mode')
    nmlgen.add_default('orb_iyear')

<?xml version="1.0"?>

<testpioconfig>

<frost
  NETCDF_PATH="/contrib/bgl/netcdf" 
  PNETCDF_PATH="/contrib/bgl/parallel-netcdf-1.1.0" 
  MPI_INC="-I/bgl/BlueLight/ppcfloor/bglsys/include" 
  MPI_LIB="-L/bgl/BlueLight/ppcfloor/bglsys/lib -lmpich.rts -lmsglayer.rts -lrts.rts -ldevices.rts"
  F90 = "blrts_xlf90"
  FC = "blrts_xlf90"
  CC = "blrts_xlc"
  FFLAGS = "-qextname=flush -g -qfullpath -WF,-DBGL"
  ALLCFLAGS = "-DBGL"
  conopts = "--disable-mct  --enable-mpiio --enable-timing --build=powerpc-bgp-linux --host=powerpc64-suse-linux"
  workdir = "/ptmp/${USER}/testpio"
  run = "cqsub -n32 -m vn -t 00:50:00 -q default "
  submit ="perl "
 />

<bluefire
  NETCDF_PATH="/usr/local/" 
  PNETCDF_PATH="/contrib/parallel-netcdf-1.1.0" 
  FFLAGS = "-g -qfullpath -WF,-D_USE_COMP2IO_FC,-D_USE_IO2COMP_FC"
  ENV_PREATTACH_PROCESSOR_LIST="AUTO_SELECT"
  ENV_MP_EAGER_LIMIT="0"
  MPIF90 = "mpxlf2003_r"
  conopts = "--disable-mct --enable-filesystem-hints=gpfs  "
  workdir = "/ptmp/${USER}/testpio"
  submit = "bsub < "
  run = "mpirun.lsf"
  preamble = "#BSUB -n 16
#BSUB -q premium
#BSUB -N
#BSUB -x
#BSUB -a poe
#BSUB -o testpio.%J.stdout
#BSUB -e testpio.%J.stderr
#BSUB -J testpio_suite
#BSUB -W 1:50"

/>
<dublin
  ADDENV_PATH = "/usr/local/mpich-lf95/bin"
  ADDENV_LD_LIBRARY_PATH = "/usr/local/lf95/lib64"
  ENV_P4_GLOBMEMSIZE="518400000"
  MPIF90 = "mpif90"
  MPICC = "mpicc"
  F90 = "lf95"
  CC = "gcc"
  NETCDF_PATH="/usr/local/netcdf-3.6.3-gcc-4.1.2-lf95-8.0_x86_64" 
  FFLAGS = "-g  --chk a,e,s,u --pca --trace --trap "
  submit="qsub "
  run="/usr/local/bin/mpiexec "
  conopts = "--disable-mct "
  workdir = "/scratch/cluster/${USER}/testpio"
  preamble = "#PBS -q medium
#PBS -l nodes=1:ppn=16
#PBS -N testpiob
#PBS -j oe
#PBS -V
"
  testsuites = "snet mpiio"
/>  
<dublin_intel
  ADDENV_PATH = "/usr/local/mpich-1.2.7p1-intel-3.2.02/bin:/usr/local/intel-cluster-3.2.02/fc/11.0.074/bin/intel64/:/usr/local/intel-cluster-3.2.02/cc/11.0.074/bin/intel64"
  ENV_P4_GLOBMEMSIZE="518400000"
  MPIF90 = "mpif90"
  MPICC = "mpicc"
  F90 = "ifort"
  CC = "icc"
  NETCDF_PATH="/usr/local/netcdf-3.6.3-intel-3.2.02" 
  FFLAGS = "-g "
  submit="qsub "
  run="/usr/local/bin/mpiexec "
  conopts = "--disable-mct "
  workdir = "/scratch/cluster/${USER}/testpio"
  preamble = "#PBS -q medium
#PBS -l nodes=1:ppn=16
#PBS -N testpiob
#PBS -j oe
#PBS -V"
  testsuites = "snet mpiio"
/>  


<jaguar
  MPIF90 = "ftn -L$LIBSCI_BASE_DIR/pgi/lib"
  MPICC = "cc -L$LIBSCI_BASE_DIR/pgi/lib"
  F90 = "pgf90"
  CC = "pgcc"

  ENV_NETCDF_PATH="$NETCDF_DIR"
  ENV_PNETCDF_PATH="$PNETCDF_DIR"

  workdir = "/tmp/work/${USER}/testpio"
  run = "aprun -n 16 "
  submit = "qsub "
  conopts = " --disable-mct --enable-filesystem-hints=lustre"
  preamble="#PBS -N testpio_suite
#PBS -q batch
#PBS -l size=16
#PBS -l walltime=00:50:00
#PBS -j oe
#PBS -V"

/>
<athena

<?xml version="1.0"?>

<config_ccsmtest>

<ccsmtest NAME="APT"
          DESC="auto promotion test (default length)"
          INFO_DBUG="2"
          CCSM_TCOST="0"
          DOUT_S="FALSE" />
          
<ccsmtest NAME="SEQ"
          DESC="sequencing bfb test (10 day seq,conc tests)"
          INFO_DBUG="2"
          STOP_OPTION="ndays"
          STOP_N="10"
          REST_OPTION="never"
          CCSM_TCOST="0"
          DOUT_S="FALSE" />

<ccsmtest NAME="PEA"
          DESC="single pe bfb test (default length)"
          INFO_DBUG="2"
          REST_OPTION="never"
          CCSM_TCOST="2"
          DOUT_S="FALSE" />

<ccsmtest NAME="PEM"
          DESC="pes counts mpi bfb test (seq tests; default length)"
          INFO_DBUG="2"
          BFBFLAG="TRUE"
          REST_OPTION="never"
          CCSM_TCOST="1"
          DOUT_S="FALSE" />

<ccsmtest NAME="PET"
          DESC="openmp bfb test (seq tests; default length)"
          INFO_DBUG="2"
          BFBFLAG="TRUE"
          BUILD_THREADED="TRUE"
          REST_OPTION="never"
          CCSM_TCOST="1"
          DOUT_S="FALSE" />

<ccsmtest NAME="ERS"
          DESC="exact restart from startup, default 6 days + 5 days"
          INFO_DBUG="2"
          CCSM_TCOST="0"
          STOP_OPTION="ndays"
          STOP_N="11"
          DOUT_S="FALSE" />

<ccsmtest NAME="ERT"
          DESC="exact restart from startup, default 2 month + 1 month (ERS with info dbug = 1)"
          INFO_DBUG="1"
          CCSM_TCOST="0"
          STOP_OPTION="nmonths"
          STOP_N="3"
          DOUT_S="FALSE" />

<ccsmtest NAME="ERI"
          DESC="hybrid/branch/exact restart test, default 3+19/10+9/5+4 days"
          INFO_DBUG="2"
          STOP_OPTION="ndays" 
          STOP_N="22" 
          CCSM_TCOST="1"
          DOUT_S="TRUE" />
          
<ccsmtest NAME="ERB"
          DESC="branch/exact restart test"
          INFO_DBUG="2"
          STOP_OPTION="ndays"
          STOP_N="17"
          CCSM_TCOST="1"
          DOUT_S="TRUE" />
          
<ccsmtest NAME="ERH"
          DESC="hybrid/exact restart test"
          INFO_DBUG="2"
          STOP_OPTION="ndays"
          STOP_N="10"
          CCSM_TCOST="1"
          DOUT_S="TRUE" />
          
<ccsmtest NAME="LAR"
          DESC="long term archive test"
          INFO_DBUG="1"
          STOP_OPTION="nmonths"
          STOP_N="2"
          DOUT_S="TRUE" 
          CCSM_TCOST="4"
          DOUT_L_MS="TRUE" />
          
<ccsmtest NAME="PFS"
          DESC="performance test setup"
          INFO_DBUG="1"
          STOP_OPTION="ndays"
          STOP_N="20"
          REST_OPTION="none"
          CCSM_TCOST="0"
          DOUT_S="FALSE" />

<ccsmtest NAME="ICP"
          DESC="cice performance test"
          INFO_DBUG="2"
          STOP_OPTION="ndays"
          STOP_N="10"
          REST_OPTION="none"
          COMP_RUN_BARRIERS="TRUE"
          TIMER_LEVEL="12"
          CCSM_TCOST="4"
          DOUT_S="FALSE" />

<ccsmtest NAME="OCP"
          DESC="pop performance test"
          INFO_DBUG="2"
          STOP_OPTION="ndays"
          STOP_N="10"
          REST_OPTION="none"
          COMP_RUN_BARRIERS="TRUE"
          TIMER_LEVEL="12"
          CCSM_TCOST="4"
          DOUT_S="FALSE" />
          
<ccsmtest NAME="SMS"
          DESC="smoke startup test (default length)"
          INFO_DBUG="2"
          CCSM_TCOST="-1"
          DOUT_S="FALSE" />

<ccsmtest NAME="SBN"
          DESC="smoke build-namelist test (just run preview_namelist and check_input_data)"
          INFO_DBUG="2"
          CCSM_TCOST="-1"
          DOUT_S="FALSE" />

<ccsmtest NAME="SSP"
          DESC="smoke CLM spinup test (only valid for CLM compsets with CLM45 and CN or BGC)"
          INFO_DBUG="2"
          CCSM_TCOST="-1"
          CLM_BLDNML_OPTS="-bgc_spinup on"
          STOP_OPTION="ndays"
          RUN_TYPE="startup"
          STOP_N="4"
          DOUT_S="TRUE" />

<ccsmtest NAME="NCK"
          DESC="multi-instance validation vs single instance (default length)"
          INFO_DBUG="2"
          CCSM_TCOST="-1"
          DOUT_S="FALSE" />
          
<ccsmtest NAME="CME"
          DESC="compare mct and esmf interfaces (10 days)"
          COMP_INTERFACE="MCT"
          USE_ESMF_LIB="TRUE"
          STOP_OPTION="ndays"
          STOP_N="10"
          REST_OPTION="none"
          INFO_DBUG="2"
          CCSM_TCOST="4"
          DOUT_S="FALSE" />
          
<ccsmtest NAME="P4A"
          DESC="production branch test b40.1850.track1.1deg.006 year 301"
          RUN_TYPE="branch"
	  RUN_REFCASE="b40.1850.track1.1deg.006"
	  RUN_REFDATE="0301-01-01"
	  RUN_STARTDATE="0301-01-01"
          GET_REFCASE="TRUE"
          STOP_OPTION="nmonths"
          STOP_N="1"
          HIST_OPTION="nmonths"
          HIST_N="1"
          INFO_DBUG="2"
          CCSM_TCOST="1"
          DOUT_S="FALSE" />

</config_ccsmtest>

#! /bin/csh -f

source /etc/profile.d/modules.csh
module purge
module load cmake
module load perl xml-libxml switch
if ( $COMPILER == "pgi" ) then
    module load pgi
endif

if ( $COMPILER == "intel" ) then
    module load intel
endif
module load netcdf

#-------------------------------------------------------------------------------

limit coredumpsize 1000000
limit stacksize unlimited


<?xml version="1.0"?>
<config case="base_mesh">
	<get_file dest_path="work_case_dir" file_name="topo.msh">
		<mirror protocol="wget" url="https://raw.githubusercontent.com/dengwirda/jigsaw-geo-python/dev/files/"/>
	</get_file>

	<add_link source_path="mpas_model" source="testing_and_setup/compass/ocean/jigsaw_to_MPAS" dest="jigsaw_to_MPAS"/>
	<add_link source_path="initial_condition_database" source="landIceTopo_0.1deg_smooth_0.1deg.nc" dest="landIceTopo_0.1deg_smooth_0.1deg.nc"/>
	<add_link source_path="script_test_dir" source="." dest="define_base_mesh"/>

	<run_script name="run.py">
		<step executable="python">
			<argument flag="-m">jigsaw_to_MPAS.build_mesh</argument>
		</step>
	</run_script>
</config>

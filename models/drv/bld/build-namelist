add_default($nl, 'rof2lnd_fmapname');
add_default($nl, 'rof2ocn_fmapname');
add_default($nl, 'rof2ocn_rmapname');
add_default($nl, 'glc2ocn_rmapname');
add_default($nl, 'glc2ice_rmapname');
add_default($nl, 'atm2wav_smapname');

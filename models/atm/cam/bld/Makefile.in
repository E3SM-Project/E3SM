edge_mod.o: edge_mod.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<
derivative_mod.o: derivative_mod.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<
bndry_mod.o: bndry_mod.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<
prim_advance_mod.o: prim_advance_mod.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<
uwshcu.o: uwshcu.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<
wetdep.o: wetdep.F90
	$(FC) -c $(FREEFLAGS) $(FFLAGS_O3OPT) $<

endif

# Pathscale


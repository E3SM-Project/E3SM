  CPPDEF        += -DNO_R16 -DCPRPATHSCALE
  FC_FLAGS      := -extend_source -ftpp -fno-second-underscore
  FC_FLAGS_NOOPT:= $(FC_FLAGS) -O0
  FREEFLAGS     :=
  FIXEDFLAGS    :=
  LDFLAGS       :=

  ifeq ($(SMP),TRUE)
    FC_FLAGS       += -mp
    FC_FLAGS_NOOPT += -mp
    CFLAGS         += -mp
    LDFLAGS        += -mp
  endif

  ifeq ($(DEBUG),TRUE)
